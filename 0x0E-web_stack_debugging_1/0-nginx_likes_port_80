#!/usr/bin/env bash
# what’s keeping your Ubuntu container’s Nginx installation from listening on port 8?
# configures nginx to run and listen to port 80
apt-get update
apt-get install -y nginx
apt-get install curl
sed -i "s/listen 8080 default_server;/listen 80 default_server;/" /etc/nginx/sites-available/default
sed -i "s/listen \[::\]:8080 default_server ipv4only=on;/listen \[::\]:80 default_server;/" /etc/nginx/sites-available/default
sed -i "s/ ipv4only=on//" /etc/nginx/sites-available/default
sudo sed -i "s/8080/80/" /etc/nginx/sites-available/default
nginx -t
rm /etc/nginx/sites-enabled/default
ln -s /etc/nginx/sites-available/default /etc/nginx/sites-enabled/default
service nginx reload
